{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
